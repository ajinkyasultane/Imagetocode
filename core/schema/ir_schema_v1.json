{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ImageToMulticode IR v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "meta",
    "elements"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "schema",
        "title",
        "w",
        "h",
        "grid"
      ],
      "properties": {
        "schema": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "w": {
          "type": "number"
        },
        "h": {
          "type": "number"
        },
        "grid": {
          "type": "string"
        },
        "theme": {
          "type": "string",
          "enum": ["light", "dark"]
        },
        "colors": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^#[0-9a-fA-F]{6}$"
          }
        },
        "layout": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["single", "linear", "form", "grid"]
            },
            "alignment": {
              "type": "string",
              "enum": ["none", "left", "center", "right", "mixed"]
            },
            "grid": {
              "type": ["object", "null"],
              "additionalProperties": true
            }
          }
        }
      }
    },
    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "type",
          "bbox"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "enum": [
              "text",
              "input",
              "button",
              "image",
              "unknown",
              "container"
            ]
          },
          "bbox": {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": {
              "type": "number"
            }
          },
          "text": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "src": {
            "type": "string"
          },
          "style": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "role": {
                "enum": [
                  "h1",
                  "p"
                ]
              },
              "variant": {
                "enum": [
                  "primary",
                  "secondary"
                ]
              }
            }
          },
          "secure": {
            "type": "boolean"
          },
          "placeholder": {
            "type": "string"
          },
          "avg_color": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 3,
            "maxItems": 3
          },
          "dominant_color": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 3,
            "maxItems": 3
          },
          "has_border": {
            "type": "boolean"
          },
          "fill_ratio": {
            "type": "number"
          },
          "is_uniform": {
            "type": "boolean"
          },
          "width": {
            "type": "integer"
          },
          "height": {
            "type": "integer"
          }
        }
      }
    }
  }
}
